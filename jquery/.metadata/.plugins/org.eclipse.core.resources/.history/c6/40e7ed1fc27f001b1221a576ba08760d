<script type="text/javascript">
$("#btn2").click(function () {
	//값변경
	//$("#q03").text("헬로우 제이쿼리");
	$("#q03").html("<b>헬로우</b> 제이쿼리");
	$("#q04").html("<a href='http://www.naver.com'>네이버</a>");
	$("#q05").addClass("q05");
	let li = $("<li></li>").text("포도");
	$("#q05").append(li);
});


</script>
