<script type="text/javascript">
 
$(function() {
    $("input").focus(function () {
        $(this).css("background-color", "#ffff00");
    });
    $("input").blur(function () { //포커스를 잃었을때
        $(this).css("background-color", "blue");
    });
});

</script>
