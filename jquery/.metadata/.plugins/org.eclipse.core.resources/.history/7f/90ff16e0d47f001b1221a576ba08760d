<h1>Jquery-UI 달력</h1>
<h2>Date Picker</h2>

<p>선택일:<input type="text" id="date"></p>

연도:<input type="text" id="year">
월:<input type="text" id="month">
일:<input type="text" id="day">
요일:<input type="text" id="week">

<script type="text/javascript">
$(document).ready(function() {
   
   let week = ['일', '월', '화', '수', '목', '금', '토'];
   
   $("#date").datepicker({
      dateFormat: "yy/mm/dd", 
      dayNamesMin: week,
      monthNames: ['1월', '2월', '3월', '4월', '5월', '6월', '7월',
                  '8월'. '9월', '10월', '11월', '12월'],
      onSelect: function (d) {
         alert( d );
         
      let arr = d.split('/');
      
      $('#year').val(arr[0].trim());
      $('#month').val(arr[1]);
      $('#day').val(arr[2]);
      }
   		
   	let weekday = new Date($("#date").datepicker({ dateFormat: "yy/mm/dd"}).val());
   });
   
   
});


</script>

