<input type="button" onclick="appendNum()" value="number">
<script type="text/javascript">
function appendNum() {
	//1.
	var myTable = document.getElementById('n1')
	//2.
	makeUserNum(userPrompt){
		console.log(userPrompt)
		let userNum = document.createElement('td');
		userNum.innerText = userPrompt ?? 'no text given';
		myTable.append(userNum);
	}
	
	
	
	
}
function makeUserNum(){
	window.prompt('Add number');
}
function result() {
	let number1;
	let number2;
	number1 = parseInt(document.getElementById("num1").value);
	number2 = parseInt(document.getElementById("num2").value);
	let result;
	result = number1 * number2;
	alert(result);
}

</script>
