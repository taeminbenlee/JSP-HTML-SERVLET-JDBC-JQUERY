<script type="text/javascript">
//계산을 위한 변수 선언및 초기화
let count = 0;
let time = 0;
let choice = 0;

function noodle() {
	//매번 실행시 타이머 초기화를 위한 함수
	clearInterval(time);
	//select의 value 값 가져오기
	let value = document.getElementById('selid').value;
	count = value;
	//alert(value);
	//다큐먼트 안의 frm아느이 myChoice의 번지수 가져오기
	choice = document.frm.myChoice.selectedIndex;
	//alert(choice);
	//선택되어진 값을 확인후 값을 받아오기
	count = parseInt(document.frm.myChoice.options[].value);
	
	
	
	
}



</script>

