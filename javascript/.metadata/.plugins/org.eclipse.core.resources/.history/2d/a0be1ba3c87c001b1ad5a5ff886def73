<script type="text/javascript">
function insert_Row() {
var x=document.getElementById('mytable').insertRow(-1);
var a = x.insertCell(0);
var b = x.insertCell(1);
var c = x.insertCell(2);
var d = x.insertCell(3);
let val1 = prompt("입력");
let val2 = prompt("입력");
let val3 = prompt("입력");
let val4 = prompt("입력");
a.innerHTML=val1;
b.innerHTML=val2;
c.innerHTML=val3;
d.innerHTML=val4;
}


</script>
